    "@types/node": "16.x",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.6.2",
    "@wessberg/di-compiler": "^4.0.2",
    "chai": "^5.2.0",
    "chai-as-promised": "^8.0.1",
    "concurrently": "^8.2.2",
    "cpx": "^1.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-plugin-security": "^2.1.0",
    "madge": "^8.0.0",
    "minimatch": "^10.0.1",
    "mocha-junit-reporter": "^2.2.1",
    "mocha-multi-reporters": "^1.5.1",
    "moq.ts": "^10.0.8",
    "nerdbank-gitversioning": "^3.6.132",
    "rimraf": "^6.0.1",
    "shx": "^0.4.0",
    "sinon": "^17.0.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "ts-patch": "^3.3.0",
