{
  "private": true,
  "name": "vscode-fabric",
  "workspaces": [
    "api",
    "util",
    "extension"
  ],
  "scripts": {
    "build": "npm run build --ws && npm run test:compile --ws",
    "watch": "npm run watch --ws",
    "test:unit": "npm run test:unit --ws",
    "test:integration": "npm run test:integration -w extension",
    "test:e2e": "npm run test:e2e -w extension",
    "test:ui": "npm run test:ui -w extension",
    "lint:check": "npm run lint:check --ws",
    "lint": "npm run lint --ws",
    "vsix": "npm run vsix -w extension",
    "clean": "npm run clean --ws",
    "clean:all": "npm run clean:all --ws && npm exec rimraf node_modules"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/chai-as-promised": "^8.0.2",
    "@types/fs-extra": "^11.0.1",
