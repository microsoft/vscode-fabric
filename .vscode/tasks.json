{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build everything",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build",
				"&&",
				"npm",
				"run",
				"test:compile",
				"--ws"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "Start Web Test Server",
			"type": "shell",
			"command": "npx",
			"args": [
				"@vscode/test-web",
				"--browserType=none",
				"--extensionDevelopmentPath=${workspaceFolder}/extension",
				"--port=3000"
			],
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "."
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".",
					"endsPattern": "Listening on"
				}
			}
		},
		{
			"label": "Stop Web Test Server",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-Command",
				"Get-NetTCPConnection -LocalPort 3000 -ErrorAction SilentlyContinue | ForEach-Object { Stop-Process -Id $_.OwningProcess -Force -ErrorAction SilentlyContinue }"
			],
			"presentation": {
				"reveal": "silent"
			}
		}
	]
}