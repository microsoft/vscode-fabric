{
  "name": "@fabric/vscode-fabric-api",
  "publisher": "fabric",
  "private": true,
  "displayName": "Microsoft Fabric - APIs for VS Code",
  "description": "Contains APIs for interacting with Microsoft Fabric and VS Code Fabric extensions",
  "version": "0.23.0-preview",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "mkdir-redist": "mkdir redist",
    "prebuild-redist": "copy package.pack.json lib\\package.json && copy .npmignore lib",
    "build-redist": "cd lib && npm exec nbgv-setversion && npm pack --pack-destination ../redist",
    "postbuild-redist": "copy /Y lib\\package.json redist && del lib\\package.json && del lib\\.npmignore",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src/**/*.ts -c ../../.eslintrc.js",
    "test": "vscode-test --coverage",
    "clean": "npm exec rimraf out && npm exec rimraf lib"
  },
  "dependencies": {
    "@azure/core-rest-pipeline": "^1.14.0",
    "@vscode/extension-telemetry": "^0.9.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.4",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^8.53.0",
    "eslint-plugin-security": "^2.1.0",
    "sinon": "^17.0.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
